<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteTransparent">

    <com.app.foxy.custom.SquareImageView
        android:id="@+id/item_song_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_song_audio_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="false"
        android:padding="8dp"
        android:src="@drawable/ic_play_white"
        app:layout_constraintBottom_toBottomOf="@+id/item_song_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/item_song_image_view"
        app:layout_constraintRight_toRightOf="@+id/item_song_image_view"
        app:layout_constraintTop_toTopOf="@+id/item_song_image_view" />

    <ProgressBar
        android:id="@+id/item_song_progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_song_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/item_song_image_view"
        app:layout_constraintRight_toRightOf="@+id/item_song_image_view"
        app:layout_constraintTop_toTopOf="@+id/item_song_image_view" />
</android.support.constraint.ConstraintLayout>