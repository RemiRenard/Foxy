<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_add_friends_block"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_add_friends_avatar"
        android:layout_width="@dimen/friends_avatar_width"
        android:layout_height="@dimen/friends_avatar_height"
        android:scaleType="fitXY"
        android:src="@drawable/ic_placeholder_male"
        app:layout_constraintBottom_toBottomOf="@+id/item_add_friends_block"
        app:layout_constraintLeft_toLeftOf="@+id/item_add_friends_block"
        app:layout_constraintRight_toLeftOf="@id/item_add_friends_name"
        app:layout_constraintTop_toTopOf="@+id/item_add_friends_block" />

    <TextView
        android:id="@+id/item_add_friends_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/item_add_friends_block"
        app:layout_constraintLeft_toRightOf="@id/item_add_friends_avatar"
        app:layout_constraintRight_toRightOf="@+id/item_add_friends_icon"
        app:layout_constraintTop_toTopOf="@id/item_add_friends_block" />

    <ImageView
        android:id="@+id/item_add_friends_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_friend"
        app:layout_constraintBottom_toBottomOf="@id/item_add_friends_block"
        app:layout_constraintLeft_toRightOf="@+id/item_add_friends_name"
        app:layout_constraintRight_toRightOf="@id/item_add_friends_block"
        app:layout_constraintTop_toTopOf="@id/item_add_friends_block" />
</android.support.constraint.ConstraintLayout>
