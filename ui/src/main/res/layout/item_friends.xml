<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_primary_rect_oval_border">

    <ImageView
        android:id="@+id/item_friends_avatar"
        android:layout_width="@dimen/friends_avatar_width"
        android:layout_height="@dimen/friends_avatar_height"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_male"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_friends_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:padding="8dp"
        android:text="MyFriend"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/item_friends_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_friends_send_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:src="@drawable/bg_primary_rect_oval"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/item_friends_send_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lines="1"
        android:paddingStart="24dp"
        android:paddingEnd="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/Send_notification"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/item_friends_send_button"
        app:layout_constraintBottom_toBottomOf="@id/item_friends_send_button"
        app:layout_constraintLeft_toLeftOf="@id/item_friends_send_button"
        app:layout_constraintRight_toLeftOf="@id/item_friends_send_image"/>

    <ImageView
        android:id="@+id/item_friends_send_image"
        android:layout_width="15dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_send_white"
        app:layout_constraintTop_toTopOf="@id/item_friends_send_button"
        app:layout_constraintBottom_toBottomOf="@id/item_friends_send_button"
        app:layout_constraintRight_toRightOf="@id/item_friends_send_button"/>


</android.support.constraint.ConstraintLayout>
